<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text Sizes -->
    <style name="TextSize.Header">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextSize.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSize.Body">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSize.Label">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- LinearLayout Styles -->
    <style name="LinearLayout.EditTextBackground">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/background_linearlayout</item>
    </style>

    <style name="LinearLayout.ButtonBackground">

        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/background_button_without_rounded</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- EditText Styles -->
    <style name="EditText.Background">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- TextSize Styles -->
    <style name="TextSize.ActivityLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextSize.CensoredLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="TextSize.ActivityText" parent="TextSize.ActivityLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextSize.ButtonLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#292929</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Icon Styles -->
    <style name="Icon.Activity">
        <item name="android:padding">8dp</item>
    </style>

    <!-- Background Styles -->
    <style name="Background.Error">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background_linearlayout</item>
    </style>

    <style name="Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/backgroundColor</item>
    </style>
    <style name="Background.Minimal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_linearlayout</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="TextSize">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>
</resources>
